name: "LeNet"
layer {
  name: "pair_data"
  type: "Data"
  top: "pair_data"
  top: "label"
  include {
    phase: TRAIN
  }
  transform_param {
    scale: 0.00390625
  }
  data_param {
    backend: LMDB
    source: "D:/data/caffe/casia_train_lmdb_60x72_c1_ex"
    batch_size: 50
  }
}
layer {
  name: "pair_data"
  type: "Data"
  top: "pair_data"
  top: "label"
  include {
    phase: TEST
  }
  transform_param {
    scale: 0.00390625
  }
  data_param {
    backend: LMDB
    source: "D:/data/caffe/casia_val_lmdb_60x72_c1_ex"
    batch_size: 50
  }
}
