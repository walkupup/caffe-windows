}
layer {
  name: "relu4_p"
  type: "ReLU"
  bottom: "fc1_p"
  top: "fc1_p"
}
layer {
  name: "drop1_p"
  type: "Dropout"
  bottom: "fc1_p"
  top: "fc1_p"
  dropout_param {
    dropout_ratio: 0.5
  }
}
layer {
    name: "simloss"
    type: "ContrastiveLoss"
    contrastive_loss_param {
        margin: 1
    }
    bottom: "fc1"
    bottom: "fc1_p"
    bottom: "label"
    top: "simloss"
}